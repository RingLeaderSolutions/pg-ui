{
  "compilerOptions": {
    "outDir": "./tsbuild/",
    "jsx": "react",
    "module": "commonjs",
    "target": "es2015",
    "preserveConstEnums": true,
    "removeComments": true,
    "typeRoots": [
        "./node_modules/@types",
        "./src/types"
    ],

    // Where we're trying to get to:
    //"strict": true,
    
    // What we have now:
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true,

    // To do, and then toggle "strict": true
    //"strictNullChecks": true,    
    //"strictPropertyInitialization": true,
    
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}