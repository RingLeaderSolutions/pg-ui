{
  "compilerOptions": {
    "outDir": "./tsbuild/",
    "jsx": "react",
    "module": "commonjs",
    "target": "es2015",
    "preserveConstEnums": true,
    "removeComments": true,

    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
  },
  "exclude": [
    "node_modules"
  ]
}